<%= form_with scope: :category, url: create_category_path, local: true do |f| %>
    <!-- ^ defines the path for new articles -->
    
    <h1>Tara-Task</h1>
    <h2>New Category</h2>
    
        <p>
            <% if @category.errors.any? %>
                <ul>
                    <% @category.errors.full_messages.each do |message| %>
                        <li>
                            <%= message %>
                        </li>
                    <% end %>    
                </ul> 
            <% end %>
        </p>
    <!-- ^ puts error checking -->
    
        <p>
            <%= f.label :name %>
            <%= f.text_field :name %>
        </p>
    
        <p>
            <%= f.submit %>
        </p>
    <% end %>
    
    <%= link_to 'Back to Categories', categories_path %>