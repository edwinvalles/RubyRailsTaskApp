<table>
    <h1>Tara-Task</h1>
    <h2>Home</h2>
    <thead>
        <tr class='column_labels'>
            <th>Category</th>
            <th>Name</th>
            <th>Details</th>
            <th>Deadline</th>
        </tr>
    </thead>

    <tbody>
        <% @entries.each do |entry| %>
            <% category = Category.find(entry.category.id) %>
            <tr class='entries_layout'>
                <td class='category_name'><%= link_to category.name, category_path(@category) %></td>
                <td class='entry_name'><%= link_to entry.name, [@category, entry] %></td>
                <td class='entry_details'><%= entry.details %></td>
                <td class='btn' id='btn_edit'><%= link_to 'Edit', edit_category_entry_path(@category, entry) %></td>
                <td class='btn' id='btn_show'><%= link_to 'Show', category_entries_path(@category, entry) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p class='click_links'>
    <%= link_to 'New Entry', new_category_entry_path %>
</p>